{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "jsx": "react",
    "baseUrl": "./src",
    "paths": {
      "~*": ["./*"]
    },
    "allowJs": false,
    "outDir": "./build",
    "strict": true,
    "typeRoots": ["node_modules/@types"],
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "noEmit": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/node_modules/*", "dist/**/*"]
}
